%div#header
  %div#header-content
    %span.navbar-title
      =image_tag "favicon.png", width: '90'
      %h2 DJ Suite for Spotify

%div.jumbotron
  %div.container
    %h2
      Pick a playlist!
    %p
      - current_user.playlists.each do |playlist|
        %span{:id => "playlist_#{playlist.id}"}
        = link_to playlist.name, playlist_path(playlist.id, :owner => playlist.owner.id)
        %br

#footer
  .container
    %p
      Powered by
      = link_to "Spotify", "http://www.spotify.com", :target => "_blank"
      and
      = link_to "The Echo Nest.", "http://the.echonest.com", :target => "_blank"
      Created by
      = link_to "Jeff Liu.", "http://last.fm/user/emperorliu", :target => "_blank"